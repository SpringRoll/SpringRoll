{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "curly": [
            "error",
            "all"
        ],
        "brace-style": [
            "error",
            "allman",
            { "allowSingleLine": false }
        ],
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "eqeqeq": [
            "error",
            "always"
        ]
    }
}